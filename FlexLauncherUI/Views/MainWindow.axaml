<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FlexLauncherUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        TransparencyLevelHint="Mica, AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FlexLauncherUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="FlexLauncherUI">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <ExperimentalAcrylicBorder 
        Padding="16,48,16,16">
        <ExperimentalAcrylicBorder.Material>
            <ExperimentalAcrylicMaterial
                BackgroundSource="Digger"
                TintColor="Black"
                TintOpacity="1"
                MaterialOpacity="0.25" />
        </ExperimentalAcrylicBorder.Material>
        
        <Grid RowDefinitions="42,*" ColumnDefinitions="*,80">
            <TextBox Grid.Row="0" Watermark="Search profiles" VerticalContentAlignment="Center" />
            
            <Panel 
                Grid.Row="1" 
                Grid.Column="0" 
                Grid.ColumnSpan="2" 
                Margin="0,16,0,0">
            </Panel>
        </Grid>
    </ExperimentalAcrylicBorder>
</Window>
 