<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="Black">
            <StackPanel>
                <TextBlock Classes="HeadingLarge" Text="HeadingLarge" />
                <TextBlock Classes="HeadingMedium" Text="HeadingMedium" />
                <TextBlock Classes="HeadingSmall" Text="HeadingSmall" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>
    
    <Style Selector="TextBlock.HeadingLarge">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    
    <Style Selector="TextBlock.HeadingMedium">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    
    <Style Selector="TextBlock.HeadingSmall">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
</Styles>
