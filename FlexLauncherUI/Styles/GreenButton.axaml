<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="0">
            <Button Width="32" Height="32" />
        </Border>
    </Design.PreviewWith>
    
    <Style Selector="Button">
        <Style.Resources>
            <Brush x:Key="ButtonBackground">#48d870</Brush>
            <Brush x:Key="ButtonBackgroundPointerOver">#37a455</Brush>
            <Brush x:Key="ButtonBackgroundPressed">#54fe83</Brush>
        </Style.Resources>
    </Style>
</Styles>
